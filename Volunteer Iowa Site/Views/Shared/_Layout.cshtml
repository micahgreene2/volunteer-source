<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="header-top-color"> </div>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
                        <a href="/">
                            <img src="/Content/themes/base/images/Volunteer_IA_2color.png" />
                        </a>
                    </p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
            </div>
        </header>
   
        <div id="body">

            <nav class="main-nav">
            <a class="menu-action-link" href="@Url.Action("Index", "Home")"><span aria-hidden="true" data-icon="&#x21;"></span>Home</a>
            <a class="menu-action-link" href="@Url.Action("About", "Home")"><span aria-hidden="true" data-icon="&#x22;"></span>About</a>
            <a class="menu-action-link" href="@Url.Action( "Index","Log")"><span aria-hidden="true" data-icon="&#x23;"></span>Log</a>
            </nav>
            <!--
            <nav class="main-nav">
                <ul id="menu">
                    <li class="menu-link"><a class="menu-action-link" href="@Url.Action("Index", "Home")"><span aria-hidden="true" data-icon="&#x21;"></span>Home</a></li>
                    <li class="menu-link"><a class="menu-action-link" href="@Url.Action("About", "Home")"><span aria-hidden="true" data-icon="&#x22;"></span>About</a></li>
                    <li class="menu-link"><a class="menu-action-link" href="@Url.Action("Log", "Home")"><span aria-hidden="true" data-icon="&#x23;"></span>Log</a></li>
                    <!--<li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { @class = "test" })</li>
                </ul>
            </nav>
            -->
           <!-- @RenderSection("featured", required: false) -->
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
